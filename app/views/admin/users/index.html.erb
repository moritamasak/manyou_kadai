<h1>ユーザーの一覧画面</h1>
<p><%= notice %></p>

<table>
  <tr>
    <th>ユーザー名</th>
    <th>管理者権限</th>
    <th>メールアドレス</th>
    <th>投稿数</th>
  </tr>

<% @users.each do |user| %>
  <tr class="index-contents">
    <td><%= user.name %></td>
    <td><%= user.admin %></td>
    <td><%= user.email%></td>
    <td><%= user.tasks.count %></td>
    <td><%= link_to '詳細', admin_user_path(user.id)%></td>
    <td><%= link_to '更新', edit_admin_user_path(user.id) %></td>
    <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: {confirm: '本当に削除してよろしいですか？'}%></td>
  </tr>
<% end %>
</table>
<%= link_to 'ユーザー追加', new_admin_user_path%>