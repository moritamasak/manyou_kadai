<%= form_with(model: @task,local: true) do |form| %>
<h1>タスク新規作成</h1>
  <div class="task_name">
    <%= form.label :name %>
    <%= form.text_field :name%>
  </div>
  <div class="task_content">
    <%= form.label :content %>
    <%= form.text_field :content%>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to 'タスク一覧画面へ', tasks_path %>